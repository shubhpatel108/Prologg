<script type="text/javascript">
  $("#header-id").remove();
  $("body").css({"background": "#37BC9B"})
</script>
<div>
<div class="the-box">
	<h4 class="small-title">CHECKBOX AND RADIO</h4>
	<%= form_tag(controller: "linkedin_profile", action: "refine", html: {role: 'form'}) do %>
		<div class="row">
			<% @awards.each do |award| %>
				<div class="checkbox">
				  <label>
				  	<%= check_box_tag "award_"+award[:id] %>
						<%= [award[0], award[1]].join(", ") %>
					</label>
				</div>
			<% end %>
		</div>
		<div class="row">
			<% @courses.each do |course| %>
				<div class="checkbox">
				  <label>
					<input type="checkbox" value="" class="i-grey-square">
						<%= course %>
				  </label>
				</div>
			<% end %>
		</div>
		<%= submit_tag "Done", class: "btn btn-success"%>
	<% end %>
</div>
</div>
