<script type="text/javascript">
  $("#header-id").remove();
  $("body").css({"padding-top": "0px"})
  $(".page-content").css({"margin-left": "0px"})
  $(".page-content").css({"background": "#37BC9B"})
  $("#footer-id").remove();
</script>
<div class="login toolkits">

  <%= render partial: "layouts/center_logo"%>

  <div class="login-wrapper">
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="form-group has-feedback lg left-feedback no-label">
	      <!-- <%= f.label :email %><br /> -->
	      <%= f.email_field :email, autofocus: true, class: "form-control no-border input-lg rounded", placeholder: "Email" %>
	      <span class="fa fa-envelope form-control-feedback"></span>
	    </div>

		  <div class="actions">
		    <%= f.submit "Send me reset password instructions", class: "btn btn-warning btn-lg btn-perspective btn-block" %>
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>

<script type="text/javascript">
  $(window).resize(function() {
    var windowwidth = $(window).width();
    if (windowwidth > 991) {
        $(".page-content").addClass("toggle");
        $(".page-content").css({"background": "#37BC9B"})
    };
  });
</script>