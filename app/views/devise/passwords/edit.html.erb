<!-- <h2>Change your password</h2> -->
<script type="text/javascript">
  $("#header-id").remove();
  $("body").css({"padding-top": "0px"})
  $(".page-content").css({"margin-left": "0px"})
  $(".page-content").css({"background": "#37BC9B"})
  $("#footer-id").remove();
</script>
<div class="login toolkits">

  <%= render partial: "layouts/center_logo"%>

  <div class="login-wrapper">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group has-feedback lg left-feedback no-label" >
      <!-- <%= f.label :password %> -->
      <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control no-border input-lg rounded", placeholder: "Password" %>
      <span class="fa fa-lock form-control-feedback" style="top: 20px"></span>
    </div>

      <div class="form-group has-feedback lg left-feedback no-label">
        <!-- <%= f.label :password_confirmation %><br /> -->
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control no-border input-lg rounded", placeholder: "Conform Password" %>
        <span class="fa fa-unlock form-control-feedback"></span>  
      </div>

      <div class="actions">
        <%= f.submit "Change my password" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<script type="text/javascript">
  $(window).resize(function() {
    var windowwidth = $(window).width();
    if (windowwidth > 991) {
        $(".page-content").addClass("toggle");
        $(".page-content").css({"background": "#37BC9B"})
    };
  });
</script>