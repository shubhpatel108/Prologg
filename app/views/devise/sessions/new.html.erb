<script type="text/javascript">
  $("#header-id").remove();
  $("body").css({"background": "#37BC9B"})
  $("#footer-id").remove();
</script>
<div class="login toolkits">
<div class="login-header text-center">
  <%= image_tag ("download.jpg"), class: "logo" %>
</div>
<div class="login-wrapper">

  <%= render 'layouts/notifications' %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group has-feedback lg left-feedback no-label">
      <%= f.text_field :email, class: "form-control no-border input-lg rounded", placeholder: "Username" %>
      <span class="fa fa-user form-control-feedback"></span>
    </div>

    <div class="form-group has-feedback lg left-feedback no-label" >
      <%= f.password_field :password, autocomplete: "off", class: "form-control no-border input-lg rounded", placeholder: "Password" %>
      <span class="fa fa-lock form-control-feedback"></span>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="checkbox">
          <label>
          <%= f.check_box :remember_me, class: "i-yellow-flat" %>
          <%= f.label :remember_me %>
          </label>
        </div>
      </div>
    <% end -%>

    <div class="actions">
      <div class="form-group">
        <%= f.submit "Log in", class: "btn btn-warning btn-lg btn-perspective btn-block" %>
      </div>
    </div>
  <% end %>

  <strong><%= render "devise/shared/links" %></strong>
</div>
