<div class="col-lg-6 col-lg-offset-2">
		<%= image_tag("topcoder_small.png", class: "sitelogo", style: "width: 50px; height: 50px;") %>
			&nbsp;&nbsp;&nbsp; <strong style="font-size: 30px;">Topcoder</strong>
	</div>
	<div class="col-lg-4">
		<% if current_user.topcoder_profile.nil? %>
		<a href="<%= topcoder_profile_new_path %>" class="btn btn-info btn-perspective"><i class="fa fa-plus-circle"></i>&nbsp;Add</a>&nbsp;
		<% else %>
		<a href="<%= topcoder_update_profile_path %>" class="btn btn-success btn-perspective"><i class="fa fa-pencil-square-o"></i>Update</a>
		<a href="javascript:void(0)" class="btn btn-danger btn-perspective" id="delete_topcoder"><i class="fa fa-minus-circle"></i>&nbsp;Remove</a>&nbsp;
		<% end -%>
</div>

<script type='text/javascript'>
		$(document).ready(function() {
		  	$('#delete_topcoder').on("click",function(){
				ajaxLoad("<%= topcoder_delete_profile_path %>");
		  	});
		});
</script>