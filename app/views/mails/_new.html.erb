<!-- BEGIN MAIL APPS NEW MAIL -->
<div class="mail-apps-wrap">
	<div class="the-box bg-success no-border no-margin heading">
		<div class="row" style="height: 75px;">
			<div class="col-sm" >
				<h2><i class="fa fa-envelope icon-md icon-circle icon-bordered"></i> New Mail </h2>
			</div><!-- /.col-sm-6 -->
		</div><!-- /.row -->
	</div>

	<div class="the-box no-margin">
		<div class="row">
			<div class="col-sm-11">
				<%= form_for(:mail, :url => send_mails_path(@username), html: {id: "send_mail"}) do |f| %>
					<div class="form-group">
						<%= f.label("Mail Subject:")%>
						<%= f.text_field(:subject, :placeholder => "Talk about what...",  :class=>"form-control input-lg") %>
					</div><!-- /.input-group -->
					<div class="form-group">
						<%= f.label("Content:")%>
						<%= f.text_area(:content , :class=>"form-control input-lg summernote-sm", :style=> "height: 250px;") %>
					</div><!-- /.input-group -->
					<div class="form-group">
						<button type="submit" class="btn btn-success"><i class="fa fa-rocket"></i> Send mail</button>
					</div>
				<% end %>
			</div><!-- /.col-sm-8 -->
		</div><!-- /.row -->
	</div><!-- /.the-box -->
</div><!-- /.mail-apps-wrap -->
<!-- END MAIL APPS NEW MAIL -->

