<div class="col-md-9 col-md-offset-1" style="margin-top:50px; background:#FFFFFF; box-shadow:0px 0px 10px #666666; border:1px solid #CCCCCC;opacity: 0.8;filter:alpha(opacity=80);">

<%= form_for(:mail, :url => send_mails_path(@username)) do |f| %>

<br>
   <%= f.label(:subject, "Subject:", :class=>"input")%>
   
  <%= f.text_field(:subject, :placeholder => "Subject") %>
  <br>
  <br>
 
  <%= f.label(:content, "Content:",:class=>"input")%>
 
  <%= f.text_area(:content, :rows=>"13", :cols=>"70") %>
  <br>
 
<center>  <%= submit_tag("Send" , :class => 'btn btn-primary')%></center>
<% end %>



</div>